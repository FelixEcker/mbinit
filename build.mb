sector .config
  mariebuild:
    bin_name 'mbinit'

    src 'src/'
    out 'out/'

    files 'fsutils.c:main.c'

    std_flags     '-Wall -Isrc/ -I. -c -o'
    debug_flags   '-ggdb'
    release_flags '-O3'

    comp_cmd     'gcc $(mode_flags) $(std_flags) out/$(file).o src/$(file)'
    finalize_cmd 'gcc $(mode_flags) out/$(files).o -o $(bin_name)'
